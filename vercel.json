{
  "rewrites": [
    { "source": "/(.*)", "destination": "/" }
  ],
  "buildCommand": "npm run build",
  "installCommand": "npm install --include=dev",
  "framework": "vite",
  "env": {
    "ROLLUP_SKIP_LOAD_NATIVE_PLUGIN": "true",
    "ESBUILD_BINARY_PATH": "node_modules/esbuild/esbuild",
    "NODE_OPTIONS": "--max-old-space-size=4096"
  }
}
